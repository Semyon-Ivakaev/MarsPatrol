<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="120dp"
    android:layout_height="140dp"
    xmlns:tools="http://schemas.android.com/tools"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:cardBackgroundColor="@color/grey"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/item_weather_icon"
        android:layout_width="22dp"
        android:layout_height="22dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:src="@drawable/ic_sun_weather"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="4dp">

            <TextView
                android:text="29.01.1993"
                android:textSize="14dp"
                android:id="@+id/temp_data"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:text="3535"
                android:textSize="12dp"
                android:id="@+id/temp_sol"
                android:layout_width="match_parent"
                android:layout_height="16dp"
                app:layout_constraintTop_toBottomOf="@id/temp_data"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:text="1"
                android:textSize="16dp"
                android:id="@+id/temp_min_cel"
                android:layout_width="0dp"
                android:layout_height="18dp"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@id/temp_sol"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/temp_max_cel"/>

            <TextView
                android:text="test"
                android:textSize="16dp"
                android:id="@+id/temp_max_cel"
                android:layout_width="0dp"
                android:layout_height="18dp"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@id/temp_sol"
                app:layout_constraintStart_toEndOf="@id/temp_min_cel"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:text="test"
                android:textSize="16dp"
                android:id="@+id/temp_min_far"
                android:layout_width="0dp"
                android:layout_height="18dp"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@id/temp_min_cel"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/temp_max_far"/>

            <TextView
                android:text="test"
                android:textSize="16dp"
                android:id="@+id/temp_max_far"
                android:layout_width="0dp"
                android:layout_height="18dp"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@id/temp_max_cel"
                app:layout_constraintStart_toEndOf="@id/temp_min_far"
                app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>